{
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {}
    },
    "c3CreatePaymentRequest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Description": "Creates a payment request through the C3 API.",
        "Architectures": [
          "arm64"
        ],
        "Runtime": "nodejs20.x",
        "Timeout": 10,
        "Environment": {
          "Variables": {
            "C3_TENANT_API_KEY": "<YOUR_C3_TENANT_API_KEY>"
          }
        },
        "Role": "arn:aws:iam::123456789012:role/lambda-role",
        "Handler": "index.js",
        "PackageType": "Zip"
      }
    }
  }
}